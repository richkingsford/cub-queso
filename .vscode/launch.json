{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "env": {
                "DISPLAY": ":0"
            }
        },
        {
            "name": "Python: Lay Bricks (Auto)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/lay_bricks.py",
            "console": "integratedTerminal",
            "python": "${command:python.interpreterPath}",
            "env": {
                "DISPLAY": ":0"
            }
        }
    ]
}